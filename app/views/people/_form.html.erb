<%= form_for(@person, :html => { :multipart => true }, :builder => TidyFormBuilder) do |f| %>
  <% if @person.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@person.errors.count, "error") %> prohibited this person from being saved:</h2>

      <ul>
      <% @person.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.password_field :secret %>
  </div>
  <div class="field">
	<p>
    <%= f.country_select :country %>
	</p>
  </div>
  <div class="field">
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.text_area :description, :cols => 30, :rows => 10 %>
  </div>
  <div class="field">
    <%= f.check_box :can_send_email %> 
  </div>
  <div class="field">
    <%= f.text_field :graduation_year %>
  </div>
  <div class="field">
    <%= f.text_field :body_temperature %>
  </div>
  <div class="field">
    <%= f.text_field :price %>
  </div>
  <div class="field">
    <%= f.date_select :birthday %>
  </div>
  <div class="field">
    <%= f.datetime_select :favorite_time %>
  </div>

  <div class="field">
    <%= f.file_field :photo %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
